<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.text.Font?>
<?import java.lang.*?>
<HBox styleClass="other" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.qabel.desktop.ui.actionlog.item.OtherActionlogItemController">
    <children>
        <BorderPane fx:id="otherActionlog">
            <center>
                <HBox fx:id="shadow">
                    <children>
                        <Polygon fill="#fd670d" rotate="270" strokeType="INSIDE">
                            <points>
                                <Double fx:value="-10.0" />
                                <Double fx:value="10.0" />
                                <Double fx:value="10.0" />
                                <Double fx:value="10.0" />
                                <Double fx:value="0.0" />
                                <Double fx:value="-2.5" />
                            </points>
                            <HBox.margin>
                                <Insets right="-15.0" top="25.0" />
                            </HBox.margin>
                        </Polygon>
                        <VBox maxWidth="600">
                            <children>
                                <BorderPane fx:id="otherMessagebox">
                                    <center>
                                        <VBox fx:id="messageContainer" BorderPane.alignment="CENTER_LEFT">
                                        </VBox>
                                    </center>
                                    <bottom>
                                        <Label fx:id="dateLabel" styleClass="message-date" text="My Message" textAlignment="RIGHT" textFill="white" BorderPane.alignment="CENTER_LEFT">
                                            <font>
                                                <Font name="System" size="10.0" />
                                            </font>
                                        </Label>
                                    </bottom>
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </VBox.margin>
                                </BorderPane>


                            </children>
                            <BorderPane.margin>
                                <Insets bottom="10.0" left="0" right="10.0" top="10.0" />
                            </BorderPane.margin>
                        </VBox>
                    </children>
                    <BorderPane.margin>
                        <Insets left="5.0" top="12.0" />
                    </BorderPane.margin>
                </HBox>
            </center>
            <left>
                <Pane fx:id="avatarContainer">
                    <BorderPane.margin>
                        <Insets bottom="5" top="18.0" left="5"/>
                    </BorderPane.margin>
                </Pane>
            </left>
        </BorderPane>
    </children>
</HBox>
