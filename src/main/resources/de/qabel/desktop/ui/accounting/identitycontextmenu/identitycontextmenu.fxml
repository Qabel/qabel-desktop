<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<AnchorPane fx:id="identityContextMenu" xmlns="http://javafx.com/javafx/8" visible="false" styleClass="popup-menu"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.qabel.desktop.ui.accounting.identitycontextmenu.IdentityContextMenuController">
    <children>
        <VBox fx:id="contextMenu" styleClass="vbox-menu">
            <HBox>
                <children>
                    <Label styleClass="icon-edit">
                        <HBox.margin>
                            <Insets left="5" bottom="3" top="3"/>
                        </HBox.margin>
                    </Label>
                    <Button fx:id="editButton" text="%editDetails" styleClass="button-menu"
                            onAction="#openIdentityEdit"/>
                </children>
            </HBox>
            <HBox disable="true">
                <children>
                    <Label styleClass="icon-delete">
                        <HBox.margin>
                            <Insets left="5" bottom="3" top="3"/>
                        </HBox.margin>
                    </Label>
                    <Button fx:id="removeButton" wrapText="true" text="%removeIdentity" styleClass="button-menu"/>

                </children>
            </HBox>
            <Line endX="00.0" startX="-220.0"/>
            <HBox disable="true">
                <children>
                    <Label styleClass="icon-export">
                        <HBox.margin>
                            <Insets left="5" bottom="3" top="3"/>
                        </HBox.margin>
                    </Label>
                    <Button fx:id="exportButton" wrapText="true" text="%exportIdentityQID" styleClass="button-menu"/>
                </children>
            </HBox>
            <HBox>
                <children>
                    <Label styleClass="icon-qrcode">
                        <HBox.margin>
                            <Insets left="5" bottom="3" top="3"/>
                        </HBox.margin>
                    </Label>
                    <Button fx:id="openQRCode" onAction="#openQRCode" text="%exportPrivateKeyQR"
                            styleClass="button-menu"/>
                </children>
            </HBox>
            <Line endX="00.0" startX="-220.0"/>
            <HBox disable="true">
                <children>
                    <Label styleClass="icon-qrcode">
                        <HBox.margin>
                            <Insets left="5" bottom="3" top="3"/>
                        </HBox.margin>
                    </Label>
                    <Button fx:id="publicKeyQRButton" wrapText="true" text="%sharePublicKeyQR"
                            styleClass="button-menu"/>
                </children>
            </HBox>
            <HBox disable="true">
                <children>
                    <Label styleClass="icon-email">
                        <HBox.margin>
                            <Insets left="5" bottom="3" top="3"/>
                        </HBox.margin>
                    </Label>
                    <Button fx:id="publicKeyEmailButton" wrapText="true" text="%sharePublicKeyEmail"
                            styleClass="button-menu"/>
                </children>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
