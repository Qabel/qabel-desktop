<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="672.0" prefWidth="369.0" styleClass="login" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.qabel.desktop.ui.accounting.login.LoginController">
    <children>
        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../../../../logo-with-label-invert.png" />
            </image>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </ImageView>
        <VBox alignment="TOP_CENTER" prefHeight="445.0" prefWidth="342.0" styleClass="login-form">
            <children>
                <Label styleClass="login-title" text="%loginText">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </Label>
                <ChoiceBox fx:id="providerChoices" />
                <TextField fx:id="user" alignment="CENTER" promptText="%loginBoxAccountUserName" styleClass="user" text="testuser">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </TextField>

                <TextField fx:id="email" alignment="CENTER" managed="false" promptText="%loginUserEMail" styleClass="user">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </TextField>

                <PasswordField fx:id="password" alignment="CENTER" promptText="%loginBoxAccountUserPassword" text="testuser">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </PasswordField>

                <PasswordField fx:id="confirm" alignment="CENTER" managed="false" promptText="%loginConfirmPassword">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </PasswordField>

                <HBox fx:id="buttonBar" alignment="CENTER" styleClass="login-button-bar">
                    <children>
                        <Button fx:id="openCreateButton" managed="true" mnemonicParsing="false" onAction="#openCreateBoxAccountSetup" styleClass="create-account-button" text="%loginOpenCreateBoxAccountDialog" />
                        <Button fx:id="createButton" managed="false" mnemonicParsing="false" onAction="#createBoxAccount" styleClass="create-account-button" text="%loginCreateBoxAccount" />
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#login" styleClass="login-button" text="%loginLogin" />

                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
                <HBox fx:id="progressBar" alignment="CENTER" styleClass="login-button-bar">
                    <children>
                        <ProgressIndicator minHeight="30" minWidth="30" prefHeight="30" prefWidth="30" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </HBox>
                <Separator />
                <Button fx:id="recoverPassword" managed="true" mnemonicParsing="false" onAction="#recoverPassword" styleClass="newPassword" text="%loginRecoverPassword" />
                <Button fx:id="newPassword" managed="false" mnemonicParsing="false" onAction="#newPassword" styleClass="login-button" text="%loginNewPassword" />
            </children>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
