<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="window" fx:controller="de.qabel.desktop.ui.LayoutController"
           prefHeight="600.0" prefWidth="842.0"
           maxWidth="Infinity" maxHeight="Infinity" xmlns="http://javafx.com/javafx/8"
           xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <BorderPane>
            <left>
                <BorderPane styleClass="navi-container">
                    <center>
                        <VBox>
                            <children>
                                <HBox fx:id="selectedIdentity" styleClass="selectedIdentity">
                                    <children>
                                        <Pane fx:id="avatarContainer">
                                            <Label styleClass="avatar" maxHeight="-Infinity" maxWidth="-Infinity"
                                                   minHeight="50.0" minWidth="50.0" prefHeight="50.0" prefWidth="50.0">
                                                <HBox.margin>
                                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                                </HBox.margin>
                                            </Label>
                                        </Pane>
                                        <VBox BorderPane.alignment="CENTER" styleClass="aliasContainer">
                                            <children>
                                                <Label fx:id="alias" text="Guy Pearce Longerman" styleClass="alias"/>
                                                <Label fx:id="mail" text="guy@pearce.com" styleClass="mail"
                                                       style="-fx-font-size: 0.8em"/>
                                                <BorderPane styleClass="quotaBlock" visible="true">
                                                    <right>
                                                        <Label fx:id="quota" BorderPane.alignment="CENTER"
                                                               text="0" styleClass="quota"
                                                               style="-fx-font-size: 0.8em"/>
                                                    </right>
                                                    <center>
                                                        <HBox BorderPane.alignment="CENTER"
                                                              style="-fx-pref-height: 0.3em">
                                                            <padding>
                                                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                                                            </padding>
                                                            <children>
                                                                <Label minWidth="0"
                                                                       style="-fx-background-color: #fd670d; -fx-min-height:0.3em"
                                                                       fx:id="provider"
                                                                       text="">
                                                                    <padding>
                                                                        <Insets left="10.0" right="10.0" top="-3"
                                                                                bottom="-3"/>
                                                                    </padding>
                                                                </Label>
                                                            </children>
                                                        </HBox>
                                                    </center>
                                                    <VBox.margin>
                                                        <Insets top="5.0"/>
                                                    </VBox.margin>
                                                </BorderPane>
                                                <Label fx:id="quotaDescription" style="-fx-font-size: 0.8em"
                                                       styleClass="mail" text="1,7 GB free / 2 GB">
                                                    <VBox.margin>
                                                        <Insets left="5.0"/>
                                                    </VBox.margin>
                                                </Label>
                                            </children>
                                            <padding>
                                                <Insets top="5" left="5.0" right="5.0"/>
                                            </padding>
                                        </VBox>
                                    </children>
                                </HBox>
                                <VBox fx:id="navi" styleClass="navi">
                                    <children>
                                        <HBox>
                                            <children>
                                                <Button text="Button"/>
                                            </children>
                                        </HBox>
                                        <HBox>
                                            <children>
                                                <Button text="Button"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </center>
                    <bottom>
                        <VBox fillWidth="true" fx:id="bottomContainer">
                            <children>
                                <ProgressBar fx:id="uploadProgress" style="-fx-pref-width: 200;"/>

                                <HBox alignment="CENTER">
                                    <children>

                                        <ImageView fx:id="configButton">
                                            <HBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </HBox.margin>
                                        </ImageView>


                                        <ImageView fx:id="infoButton">
                                            <HBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </HBox.margin>
                                        </ImageView>


                                        <ImageView fx:id="faqButton">
                                            <HBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </HBox.margin>
                                        </ImageView>

                                        <ImageView fx:id="inviteButton">
                                            <HBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </HBox.margin>
                                        </ImageView>

                                        <ImageView fx:id="feedbackButton">
                                            <HBox.margin>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </HBox.margin>
                                        </ImageView>

                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets top="10" left="10" right="20" bottom="10"/>
                            </padding>
                        </VBox>
                    </bottom>
                </BorderPane>
            </left>
            <center>

                <BorderPane styleClass="edge-to-edge">
                    <center>
                        <VBox fx:id="scrollContent" maxWidth="Infinity" styleClass="scrollContent" maxHeight="Infinity"
                              BorderPane.alignment="CENTER">
                            <children/>
                        </VBox>
                    </center>
                </BorderPane>
            </center>
        </BorderPane>
        <ImageView StackPane.alignment="TOP_LEFT" preserveRatio="true" fitHeight="64">
            <image>
                <Image url="@/beta-badge.png"/>
            </image>
        </ImageView>
    </children>
</StackPane>
